
<div class="px-4 pt-5 my-5 text-center border-bottom">
  <h1 class="display-4 fw-bold">Mon super site de gossip !</h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead mb-4">Que de potins dans cette nouvelle prairie !</p>
      <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
        <button type="button" class="btn btn-success btn-lg px-4 gap-3"> <%= link_to "Create your gossip", new_gossip_path %></button>
      </div>
    </div>
</div>

<div class="row justify-content-center">
  <% @gossips.each do |gossip| %>
    <div class="card text-center col-sm-3 bg-secondary mb-3" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">Gossip nยบ <%= gossip.id %></br></h5>
        <p class="card-text">
        Author : <%= User.find(gossip.user_id.to_i).first_name %> <%= User.find(gossip.user_id.to_i).last_name %></br>
        Title : <%= gossip.title %> <br><br>
        <a href="/gossip/<%= gossip.id %>/" class="btn btn-danger btn-outline-light" role="button">Learn more</a>
      </div>
    </div>
  <% end %>
</div>

